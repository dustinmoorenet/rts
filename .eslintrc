{
    "parser": "babel-eslint",

    "extends": "airbnb",

    "env": {
        "browser": true,
    },

    "ecmaFeatures": {
        "experimentalObjectRestSpread": true,
        "classes": true
    },

    "rules": {
        "brace-style": [2, "stroustrup", {"allowSingleLine": true}],
        "indent": [2, 4],
        "no-console": 0,
        "no-var": 0,
        "vars-on-top": 0,
        "func-names": 0,
        "no-param-reassign": 0,
        "object-curly-spacing": 0,
        "no-use-before-define": 0,
        "react/jsx-indent-props": [2, 4],
        "max-len": 0,
        "react/jsx-no-bind": 0
    }
}
